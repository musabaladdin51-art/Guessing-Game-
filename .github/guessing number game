import random

print("Welcome to the Number Guessing Game!")
print("Try to guess the number I choose between 1 and 20!")
while True:
    secret_number = random.randint(1, 20)
    attempts = 0
while True:
    guess = input("Write a number: ")
if not guess.isdigit():
     print("Please, write a correct number.")
      continue
guess = int(guess)
     attempts += 1
if guess  secret_number:
     print("Your guess is higher. Try lower.")
else:
     print(f"ğŸ‰ Great! You guessed {secret_number} after {attempts} attempts.")
    break
play_again = input("Do you want to play again? (yes/no): ").lower()
if play_again != "yes":
    print("Thanks for playing! Goodbye ğŸ‘‹")
    break
 